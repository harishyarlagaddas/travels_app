<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eminent.morningstar" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.PlaceSelectActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.BusListActivity" android:label="@string/bus_list_activity_name"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.SeatSelectionActivity" android:label="@string/seat_selection_activity_name"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.ContactDetailsActivity" android:label="@string/contact_details_activity_name"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.PaymentInfoActivity" android:label="@string/payment_info_activity_name"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.ConfirmationActivity" android:label="@string/confimation_title"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>
